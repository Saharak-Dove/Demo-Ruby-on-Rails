<!DOCTYPE html>
<html>
	<head>
		<title>Ruby</title>
		<%= csrf_meta_tags %>

		<link
			rel="stylesheet"
			href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
			integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf"
			crossorigin="anonymous"
		/>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> <%=
		javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body class="d-flex flex-column h-100">
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<a class="navbar-brand" href="#">Ruby</a>
			<button
				class="navbar-toggler"
				type="button"
				data-toggle="collapse"
				data-target="#navbarNav"
				aria-controls="navbarNav"
				aria-expanded="false"
				aria-label="Toggle navigation"
			>
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item <%= controller_name == 'homes' ? 'active' : '' %>">
						<a class="nav-link" href="<%= homes_path %>"
							>Home<span class="sr-only">(current)</span></a
						>
					</li>
					<li class="nav-item <%= controller_name == 'vacations' ? 'active' : '' %>">
						<a class="nav-link" href="<%= vacations_path %>">Calender</a>
					</li>
					<li class="nav-item <%= controller_name == 'classrooms' ? 'active' : '' %>">
						<a class="nav-link" href="<%= classrooms_path %>">Classroom</a>
					</li>
					<% if user_signed_in? %>
					<li class="nav-item">
						<%= link_to destroy_user_session_path, method: :delete, data: { confirm:
						'แน่ใจแล้วใช่ไหม' }, class: 'btn btn-danger' do %>
						<i class="fa fa-sign-out-alt"></i> Sign out <% end %>
					</li>
					<% end %>
				</ul>
			</div>
		</nav>

		<div class="container py-5">
			<div class="col-lg-12">
				<div
					class="alert alert-danger"
					id="modalFlashError-<%= controller_name %>"
					role="alert"
					style="display:none;"
				></div>
				<% if notice.present? || alert.present? %>
				<div class="alert alert-<%= notice.present? ? 'success' : 'danger' %>">
					<strong><%= notice.present? ? notice : alert %></strong>
				</div>
				<% end %>
				<div id="formBody">
					<% flash.each do |key, value| %>
					<div class="alert alert-<%= key %>"><%= value %></div>
					<% end %> <%= yield %>
				</div>
			</div>
		</div>
	</body>

	<script>
		saveLatestTab();
		alertTimeOut();
		var queryParamsTemp = {};
		var filterParams = {};

		function queryParams(params) {
			queryParamsTemp = $.extend(params, filterParams);
			return queryParamsTemp;
		}
	</script>
</html>
