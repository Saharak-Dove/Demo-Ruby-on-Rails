<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-1">
        <a href="<%= homes_path %>" class="btn btn-success btn-circle"><i class="fas fa-angle-left fa-3x"></i></a>
      </div>
      <div class="col-lg-9">
        <h3>Student ID : <strong class="text-warning"><%= @student.decorate.student_code %></strong> ชื่อ : <strong class="text-warning"><%= @student.decorate.full_name %></strong></h3>
      </div>
      <div class="col-lg-2 text-right">
        <h3><%= @student.decorate.status_color %></h3>
      </div>
    </div>
  </div>
</div>

<%= simple_form_for @student, action: 'update', validate: true, remote: true do |f| %>
  <h3 class="py-4">ข้อมูลนักเรียน</h3>
  <div class="row">
    <div class="col-lg-6">
      <input type="hidden" name="update_student" value="true">
      <%= f.input :first_name, input_html: { class: 'form-control' } %>
    </div>
    <div class="col-lg-6">
      <%= f.input :last_name, input_html: { class: 'form-control' } %>
    </div>
    <div class="col-lg-6">
      <%= f.input :status, collection: @status, prompt: 'เลือกสถานะ', input_html: { class: 'form-control' } %>
    </div>
    <div class="col-lg-6">
      <%= f.input :class_level_id, collection: @class_levels, prompt: 'เลือกสถานะ', input_html: { class: 'form-control' } %>
    </div>

    <div class="col-lg-12 py-4 text-right">
      <%= f.button :submit, 'Update', data: { disable_with: 'Loading' }, class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>
